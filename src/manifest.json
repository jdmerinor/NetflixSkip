{
  "name": "Netflix Skip",
  "description": "Automatically skip intros and Next episode button in the Netflix web-player",
  "homepage_url": "https://github.com/jdmerinor/NetflixSkip",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },
  "permissions": [
    "https://www.netflix.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.min.js"],
      "run_at": "document_start"
    }
  ]
}